server {
    server_name www.sociohub.live sociohub.live;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    location / {
        try_files $uri $uri/ /index.html;
        # below line is active to solve react-router-dom 404 error on reload
        # https://github.com/react-boilerplate/react-boilerplate/issues/1480

        # try_files $uri /index.html;
    }

    listen 443 ssl; # managed by Certbot

    ssl_certificate /etc/letsencrypt/live/api.sociohub.live/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api.sociohub.live/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    server_name api.sociohub.live;

    location / {
        # Your API server configuration goes here
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_pass http://localhost:8080;
    }

    listen 443 ssl; # managed by Certbot

    ssl_certificate /etc/letsencrypt/live/api.sociohub.live/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api.sociohub.live/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = www.sociohub.live) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = sociohub.live) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;

    server_name www.sociohub.live sociohub.live;
    return 404; # managed by Certbot

}

server {
    if ($host = api.sociohub.live) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name api.sociohub.live;
    return 404; # managed by Certbot
}